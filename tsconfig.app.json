/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [],
    "baseUrl": "./src",
    "paths": {
      "@common/*": ["app/common/*"],
      "@components/*": ["app/components/*"],
      "@scenes/*": ["app/scenes/*"],
      "@models/*": ["app/models/*"],
      "@services/*": ["app/services/*"]
    }
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ]
}
